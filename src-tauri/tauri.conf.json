{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "newton-scope",
  "version": "0.1.0",
  "identifier": "com.katoi4423.newton-scope",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Newton Scope",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "dialog",
          "windows": ["*"],
          "permissions": [
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:allow-confirm",
            "dialog:allow-message"
          ]
        },
        {
          "identifier": "fs",
          "windows": ["*"],
          "permissions": [
            "core:path:default",
            "core:path:allow-resolve-directory"
          ]
        }
      ],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "msi", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
